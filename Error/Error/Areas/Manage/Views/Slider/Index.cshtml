
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Sliders</h1>
    <a class="btn btn-success" asp-action="create" asp-controller="slider">Create Slide</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title1</th>
            <th scope="col">Title2</th>         
            <th scope="col">RedirectUrl1</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
      @foreach (Slider slider in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@slider.Title1</td>
                <td>@slider.Title2</td>
                <td>@slider.RedirectUrl1</td>
                <td>
                    <img style="width:150px" src="~/uploads/sliders/@slider.Image">
                </td>
                <td>
                    <a  asp-action="update" asp-controller="slider" asp-route-id="@slider.Id"
                    class="btn btn-info">Update</a>

                    <a  asp-action="delete" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-danger 
item-delete">Delete</a>
                </td>
                
            </tr>

        }
     
    </tbody>

</table>

